{
    "name": "@torchlight-api/torchlight-cli",
    "version": "0.1.3",
    "description": "A CLI for Torchlight - the syntax highlighting API",
	"type": "module",
    "exports": "index.js",
    "scripts": {
        "test": "standard --env jest && jest",
        "build": "babel src --out-dir lib --copy-files \"--ignore\" \"src/stubs/**/*\""
    },
    "bin": {
        "torchlight": "lib/bin/torchlight.js"
    },
    "keywords": [
        "syntax",
        "highlighting",
        "torchlight"
    ],
    "author": "Aaron Francis <aaron@hammerstone.dev> (https://torchlight.dev)",
    "license": "MIT",
    "dependencies": {
        "axios": "^0.21.1",
        "chalk": "^4.1.2",
        "cheerio": "^1.0.0-rc.10",
        "chokidar": "^3.5.2",
        "commander": "^8.1.0",
        "fs-extra": "^10.0.0",
        "inquirer": "^8.1.2",
        "lodash.chunk": "^4.2.0",
        "lodash.get": "^4.4.2",
        "md5": "^2.3.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.15.0",
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/node": "^7.12.13",
        "babel-jest": "^27.0.6",
        "jest": "^27.0.6",
        "standard": "^16.0.3"
    },
    "standard": {
        "ignore": [
            "tests",
            "lib"
        ]
    },
    "jest": {
        "clearMocks": true,
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        }
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "12.13.0"
                    }
                }
            ]
        ]
    }
}
